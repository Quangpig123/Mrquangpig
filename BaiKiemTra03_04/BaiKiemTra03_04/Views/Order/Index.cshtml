
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@using BaiKiemTra03_04.Models
@model IEnumerable<Order>

<div class="container">
    <h3>Danh sách Đơn hàng</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt hàng</th>
                <th>Tổng giá trị</th>
                <th>Tình trạng đơn hàng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>@order.OrderStatus</td>
                    <td>
                        <a asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderID" class="btn btn-info">Xem</a>
                        <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.OrderID" class="btn btn-warning">Sửa</a>
                        <a asp-controller="Order" asp-action="Delete" asp-route-id="@order.OrderID" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Order" asp-action="Create" class="btn btn-success">Tạo đơn hàng mới</a>
</div>
