<div class="container">
    <h3>Danh sách Nhà Cung Cấp</h3>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên Nhà Cung Cấp</th>
                <th>Địa Chỉ</th>
                <th>Số Điện Thoại</th>
                <th>Email</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.SupplierName
                    </td>
                    <td width="25%">
                        @item.Address
                    </td>
                    <td width="15%">
                        @item.PhoneNumber
                    </td>
                    <td width="20%">
                        @item.Email
                    </td>
                    <td width="20%">
                        <a asp-action="Upsert" asp-route-id="@item.SupplierId" class="btn btn-sm btn-primary">Sửa</a>
                        <a asp-action="Upsert" asp-route-id="@item.SupplierId" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.SupplierId" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Upsert" class="btn btn-primary">Thêm mới Nhà Cung Cấp</a>
</div>
